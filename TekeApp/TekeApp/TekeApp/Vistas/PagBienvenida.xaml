    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label Text="TEKEAPP" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" />
            <Button Text="Buscar produccion Por Dia"   />
            <Button Text="Opción 2"  />
        </StackLayout>
    </NavigationPage.TitleView>


      

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="DarkSalmon" >
        
 
         <Image Source="FT.png"
